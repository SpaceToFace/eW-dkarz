<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".EditProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/weather_space_border"
            android:padding="24dp">

            <TextView
                android:id="@+id/edit_profile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zmień hasło"
                android:textSize="36dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editOldPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableEnd="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:drawableTint="@color/white"
                android:hint="Aktualne hasło"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:singleLine="true" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableEnd="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:drawableTint="@color/white"
                android:hint="Nowe hasło"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:singleLine="true" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/main_green"
                android:text="Zapisz zmiany"
                android:textSize="18dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
